generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  email     String   @unique
  name      String
  password  String
}

model Job {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  title       String
  type        String
  description String
  location    String
  salary      String
  company     Company  @relation(fields: [companyId], references: [id])
  companyId   String   @unique @db.ObjectId
}

model Company {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  description  String
  contactEmail String @unique
  contactPhone String
  jobs         Job[]
}
